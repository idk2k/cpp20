{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/std:c++20",
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${workspaceFolder}\\app.exe",
                "/Fo${workspaceFolder}\\build\\objs\\",
                "/Fd${workspaceFolder}\\build\\pdbs\\cl_pdb.pdb",
                //"${workspaceFolder}/*.cpp",
                "${file}",
                "/link",
                "/DEBUG:NONE",
                //"/PDB:${workspaceFolder}/build/pdbs/linker_pdb.pdb"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}